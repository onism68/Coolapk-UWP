<Page
    x:Class="CoolapkUWP.Pages.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CoolapkUWP.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mtctrl="using:Microsoft.Toolkit.Uwp.UI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    SizeChanged="Page_SizeChanged"
    mc:Ignorable="d">

    <Grid>
        <SplitView
            x:Name="splitView"
            DisplayMode="Inline"
            IsPaneOpen="False"
            OpenPaneLength="400"
            PanePlacement="Right">
            <SplitView.Pane>
                <Grid>
                    <Frame x:Name="paneFrame" Navigated="paneFrame_Navigated" />
                    <Button
                        x:Name="goHomeButton"
                        Margin="0,32,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Click="Button_Click"
                        Style="{StaticResource IconButtonStyle}"
                        Tag="home">
                        <SymbolIcon Symbol="Home" />
                    </Button>
                </Grid>
            </SplitView.Pane>

            <Grid>
                <Frame x:Name="shellFrame" />
                <Button
                    Margin="0,32,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Click="Button_Click"
                    Style="{StaticResource IconButtonStyle}"
                    Tag="panel">
                    <SymbolIcon Symbol="{x:Bind PaneOpenSymbolIcon, Mode=OneWay}" />
                </Button>
            </Grid>
        </SplitView>

        <mtctrl:InAppNotification x:Name="AppNotification" StackMode="StackInFront" />
    </Grid>
</Page>
